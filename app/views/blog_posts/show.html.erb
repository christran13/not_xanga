<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %>
</div>
<% end %>


<div class="panel panel-primary">
	<div class="panel-heading">
		<%= @blog_post.title %>
	</div>
	<div class="panel-body">
		<p>by <%= @blog_post.user.username %></p>
		<p>Created <%= time_ago_in_words(@blog_post.created_at) %> ago.</p>
		<p><%= @blog_post.blog_entry %></p>
	</div>
	<div class="panel-footer">
		<% if current_user.id == @blog_post.id %>
		<%= link_to "Edit", edit_blog_post_path(id: @blog_post.id), class: "btn btn-warning" %>
		<% end %>
		<%= link_to "View All Posts", blog_posts_path, class: "btn btn-default" %>
	</div>
</div>

<div class="panel panel-success">
	<div class="panel-heading">
		Post a comment
	</div>
	<div class="panel-body">
		<%= render 'comments/form' %>
	</div>
	
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		All Comments
	</div>	
	<div class="panel-body">
		<%= render 'comments/comment' %>
	</div>
</div>